# SLOCALE must be set to the short locale name
# LOCALE must be set to the long locale name

# This makefile does not create the symlinks

POWEBDIR = web
WEBDIR = ../../web

# prevent nothing to be done message
.PHONY: all
all: $(WEBDIR)/bdj4.html.$(SLOCALE)
	@:

$(WEBDIR)/bdj4.html.$(LOCALE) $(WEBDIR)/bdj4.html.$(SLOCALE): \
		$(POWEBDIR)/web-$(LOCALE).po $(WEBDIR)/bdj4.html.en
	@echo "-- $$(date +%T) inst-web $(LOCALE)"
	@./po-instweb.sh $< $(LOCALE) $(SLOCALE)
