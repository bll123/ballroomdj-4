# SLOCALE must be set to the short locale name
# LOCALE must be set to the long locale name

# This makefile does not create the symlinks

PODIR = po
POWEBDIR = web
MODIR = ../../locale
WEBDIR = ../../web

all: $(MODIR)/$(LOCALE)/LC_MESSAGES/bdj4.mo \
	$(WEBDIR)/bdj4.html.$(SLOCALE)

$(MODIR)/$(LOCALE)/LC_MESSAGES/bdj4.mo: $(PODIR)/$(LOCALE).po
	echo "install $(LOCALE)"

$(WEBDIR)/bdj4.html.$(SLOCALE): $(POWEBDIR)/web-$(LOCALE).po
	echo "install web $(LOCALE)"
